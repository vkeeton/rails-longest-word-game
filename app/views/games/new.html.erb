<div class="container">
  <h1>New Game!</h1>
  <ul class="list-group list-group-horizontal d-flex justify-content-between">
    <% @letters.each do |letter| %>
    <li class="list-group-item"><%= letter.capitalize %></li>
    <% end %>
  </ul>

  <form action="/score" method="post" data-turbo="false" class="row d-flex justify-between align-items-end">
    <div class="mb-3 col-6">
      <label for="wordinput" class="form-label">What is the longest word you see?</label>
      <input type="text" class="form-control" id="wordinput" name="input">
    </div>

    <div class="mb-3 col-6">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag "options", @letters %>
</form>
</div>
